@page
@model StudentRegistrationSystem.Pages.Students.IndexModel
@{
    ViewData["Title"] = "Students";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Student Registration System</h2>

            <div class="mb-3">
                <a asp-page="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Register New Student
                </a>
            </div>

            @if (Model.Students.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Registered Students (@Model.Students.Count)</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.Students[0].FullName)</th>
                                        <th>@Html.DisplayNameFor(model => model.Students[0].RegistrationNumber)</th>
                                        <th>@Html.DisplayNameFor(model => model.Students[0].Course)</th>
                                        <th>@Html.DisplayNameFor(model => model.Students[0].YearOfStudy)</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model.Students)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => student.FullName)</td>
                                            <td>@Html.DisplayFor(modelItem => student.RegistrationNumber)</td>
                                            <td>@Html.DisplayFor(modelItem => student.Course)</td>
                                            <td>@Html.DisplayFor(modelItem => student.YearOfStudy)</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-page="./Edit" asp-route-id="@student.Id"
                                                           class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-pencil"></i> Edit
                                                    </a>
                                                    <a asp-page="./Delete" asp-route-id="@student.Id"
                                                           class="btn btn-sm btn-outline-danger">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <h5 class="alert-heading">No Students Registered</h5>
                    <p>There are no students currently registered in the system.</p>
                    <hr>
                    <p class="mb-0">Click the "Register New Student" button above to add the first student.</p>
                </div>
            }
        </div>
    </div>
</div>